
<project name="GPIG-C Core" basedir="." default="rebuild-run">
	
	<!--<condition property="lib.platform.dir" value="win">
		<os family="windows" />
	</condition>-->
	
	<condition property="lib.platform.dir" value="osx">
		<os family="mac" />
	</condition>

	<condition property="lib.platform.dir" value="linux">
	    <and>
		    <not><isset property="lib.platform.dir" /></not>
			<os family="unix" />
		</and>
	</condition>
	
	<echo>${lib.platform.dir}</echo>
	
	<fail message="Only OSX and Linux supported atm" unless="lib.platform.dir" />

	<property name="src.dir" value="src" />

	<property name="lib.dir" value="lib" />
	<path id="classpath">
		<fileset dir="${lib.dir}" includes="*.jar" />
		<fileset dir="${lib.dir}/${lib.platform.dir}" includes="*.jar" />
	</path>

	<property name="build.dir" value="bin" />
	<property name="classes.dir" value="${build.dir}/classes" />
	<property name="jar.dir" value="${build.dir}/jar" />

	<property name="main-class" value="com.gpigc.core.Main" />


	<target name="clean">
		<delete dir="${build.dir}" />
	</target>

	<target name="compile">
		<mkdir dir="${classes.dir}" />
		<javac includeantruntime="false" srcdir="${src.dir}" destdir="${classes.dir}"
			classpathref="classpath" />
	</target>

	<target name="jar" depends="compile">
		<mkdir dir="${jar.dir}" />
		<jar destfile="${jar.dir}/Core.jar" basedir="${classes.dir}">
			<manifest>
				<attribute name="Main-Class" value="${main-class}" />
			</manifest>
		</jar>
	</target>

	<target name="run" depends="jar">
		<java fork="true" classname="${main-class}">
			<sysproperty key="java.library.path" path="${lib.dir}/${lib.platform.dir}" />
			<classpath>
				<path refid="classpath" />
				<path location="${jar.dir}/Core.jar" />
			</classpath>
		</java>
	</target>

	<target name="rebuild" depends="clean,jar" />

	<target name="rebuild-run" depends="clean,run" />

</project>